{
  "hosting": [
    {
      "target": "portfolio",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/package*.json",
        "**/*.md",
        "backups/**",
        "smartlinxliving/**",
        "bb84/**",
        "ras-medical-chatbot/**",
        "lumi-link/**",
        "Designs/**"
      ],
      "headers": [
        {
          "source": "/",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=0, must-revalidate"
            },
            {
              "key": "Link",
              "value": "</css/critical.min.css?v=1.1.0>; rel=preload; as=style, </css/main.css?v=1.3.0>; rel=preload; as=style, </images/intro-bg.webp>; rel=preload; as=image; fetchpriority=high"
            }
          ]
        },
        {
          "source": "**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=0, must-revalidate"
            },
            {
              "key": "Link",
              "value": "</css/critical.min.css?v=1.1.0>; rel=preload; as=style, </css/main.css?v=1.3.0>; rel=preload; as=style"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|webp|svg|ico)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, s-maxage=31536000, immutable"
            }
          ]
        },
        {
          "source": "**/*.@(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, s-maxage=31536000, immutable"
            }
          ]
        },
        {
          "source": "**/*.@(woff|woff2|ttf|eot)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, s-maxage=31536000, immutable"
            }
          ]
        },
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600"
            },
            {
              "key": "Content-Security-Policy",
              "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' data: https://cdnjs.cloudflare.com https://fonts.gstatic.com; connect-src 'self' https://api.emailjs.com https://www.google-analytics.com; frame-ancestors 'self';"
            },
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "X-Frame-Options",
              "value": "SAMEORIGIN"
            },
            {
              "key": "X-XSS-Protection",
              "value": "1; mode=block"
            },
            {
              "key": "Referrer-Policy",
              "value": "strict-origin-when-cross-origin"
            },
            {
              "key": "Permissions-Policy",
              "value": "geolocation=(), microphone=(), camera=()"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/smartlinxliving{,/**}",
          "destination": "https://smartlinx-living.web.app",
          "type": 301
        },
        {
          "source": "/bb84{,/**}",
          "destination": "https://bb84-simulation.web.app",
          "type": 301
        },
        {
          "source": "/ras-medical-chatbot{,/**}",
          "destination": "https://ras-medical-chatbot.web.app",
          "type": 301
        },
        {
          "source": "/lumi-link{,/**}",
          "destination": "https://lumi-link.web.app",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
